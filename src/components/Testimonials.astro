---
const testimonialImages = [
  '/testimonials/chat-placeholder-1.jpg',
  '/testimonials/chat-placeholder-2.jpg',
  '/testimonials/chat-placeholder-3.jpg',
  '/testimonials/chat-placeholder-4.jpg',
  '/testimonials/chat-placeholder-5.jpg',
  '/testimonials/chat-placeholder-6.jpg',
];

const starIcon = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-green-500"><path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.651l-4.753-.381-1.83-4.401z" clip-rule="evenodd" /></svg>`;
---

<section class="bg-black text-white py-16 md:py-24 px-4">
  <div class="container mx-auto max-w-6xl text-center">

    <h3 class="text-red-500 uppercase tracking-wider font-semibold text-sm mb-2">
      Testimonial
    </h3>
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
      Feedback from our customers
    </h2>

    <div class="flex items-center justify-center space-x-2 mb-12 md:mb-16">
      <div class="flex">
        <Fragment set:html={starIcon} />
        <Fragment set:html={starIcon} />
        <Fragment set:html={starIcon} />
        <Fragment set:html={starIcon} />
        <Fragment set:html={starIcon} />
      </div>
     
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4 md:gap-6">
      {testimonialImages.map((imgSrc) => (
        <div class="bg-gray-800 rounded-lg overflow-hidden shadow-md aspect-[9/16]">
          <img
            src={imgSrc}
            alt="Customer testimonial screenshot"
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      ))}
    </div>

  </div>
</section>