    ],
    highlighted: false,
  },
  {
    duration: "6 MONTHS",
    server: "High Performance Server",
    price: "$39",
    save: "SAVE 17%",
    features: [
      "+ 22,000 Live IPTV Channels",
      "+ 120,000 Movies & Series (VOD)",
      "Instant Activation!",
      "Free update (TVs and VODs)",
      "Fast & Stable",
      "Always Uptime Server",
      "4K, UHD, FHD, HD, Channels",
      "Support All Device",
    ],
    highlighted: false,
  },
  {
    duration: "12 MONTHS",
    server: "High Performance Server",
    price: "$59",
    save: "SAVE 36%",
    features: [
      "+ 22,000 Live IPTV Channels",
      "+ 120,000 Movies & Series (VOD)",
      "Instant Activation!",
      "Free update (TVs and VODs)",
      "Fast & Stable",
      "Always Uptime Server",
      "4K, UHD, FHD, HD, Channels",
      "Support All Device",
    ],
    highlighted: false,
  },
  {
    duration: "24 MONTHS",
    server: "High Performance Server",
    price: "$89",
    save: "SAVE 60%",
    features: [
      "+ 22,000 Live IPTV Channels",
      "+ 120,000 Movies & Series (VOD)",
      "Instant Activation!",
      "Free update (TVs and VODs)",
      "Fast & Stable",
      "Always Uptime Server",
      "4K, UHD, FHD, HD, Channels",
      "Support All Device",
    ],
    highlighted: true,
  },
];

const checkmarkIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>`;
---

<section class="bg-black text-white py-16 md:py-24 px-4">
  <div class="container mx-auto max-w-7xl">

    <div class="text-center mb-12 md:mb-16">
      <h3 class="text-red-500 uppercase tracking-wider font-semibold text-sm mb-2">
        Pricing Plan
      </h3>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold">
        Choose Your Plan
      </h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
      {plans.map((plan) => (
        <div class:list={[
          "border rounded-lg p-6 flex flex-col text-center transition-transform duration-300 hover:scale-105",
          plan.highlighted
            ? 'bg-red-600 border-red-700 text-white'
            : 'bg-gray-900/30 border-gray-700 text-gray-300 hover:border-red-500'
        ]}>
          <h4 class="text-xl font-semibold mb-1 uppercase tracking-wider">
            {plan.duration}
          </h4>
          <p class:list={["text-sm mb-4", plan.highlighted ? 'text-red-100' : 'text-gray-400']}>
            {plan.server}
          </p>
          <p class="text-4xl md:text-5xl font-bold my-3">
            {plan.price}
          </p>
          <p class:list={["text-xs font-semibold uppercase mb-5", plan.highlighted ? 'text-red-100' : 'text-red-500']}>
            {plan.save}
          </p>

          <hr class:list={["border-t mb-5", plan.highlighted ? 'border-red-400' : 'border-gray-600']} />

          <ul class="space-y-2 text-sm text-left flex-grow">
            {plan.features.map((feature) => (
              <li class:list={["flex items-center", plan.highlighted ? 'text-red-50' : 'text-gray-300']}>
                <Fragment set:html={checkmarkIcon} />
                <span>{feature}</span>
              </li>
            ))}
          </ul>

          <div class="mt-6">
             <a href="#" class:list={[
                 "inline-block w-full font-bold py-3 px-6 rounded transition duration-300 ease-in-out",
                 plan.highlighted
                 ? 'bg-white text-red-600 hover:bg-gray-200'
                 : 'bg-red-600 text-white hover:bg-red-700'
             ]}>
                 Choose Plan
             </a>
          </div>

        </div>
      ))}
    </div>

  </div>
</section>