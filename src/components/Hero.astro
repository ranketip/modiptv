---

// slider images :')
const imagePlaceholders = [
  'aquaman.webp',
  'batman-1.jpg',
  'blacklist.webp',
  'die.webp',
  'hunters.webp',
  'napoleon.webp',
  'vikings.webp',
  'the-laste-kingdom.webp',
];

// the background image yakho
const backgroundImg = "/background.webp"
const buyNowLink = "/#"

const imagesForLoop = [...imagePlaceholders, ...imagePlaceholders];
---

<section class="relative bg-gradient-to-r from-black/80 via-black/60 to-transparent text-white min-h-[75vh] md:min-h-[80vh] flex flex-col justify-between overflow-hidden">
  <div class="absolute inset-0 -z-10">
    <img
      src={backgroundImg}
      alt="Family watching TV"
      class="w-full h-full object-cover"
    />
  </div>

  {/* Added container for animations */}
  <div class="container mx-auto px-6 pt-20 md:pt-32 lg:pt-40 flex-grow">
    <div class="max-w-lg md:max-w-xl lg:max-w-2xl">
      {/* Animation Class 1 */}
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-4 animate-hero-fade-in-up animate-hero-delay-1">
        Best IPTV service for high-quality streaming
      </h1>
      {/* Animation Class 2 */}
      <p class="text-lg md:text-xl mb-8 text-gray-200 animate-hero-fade-in-up animate-hero-delay-2">
        Enjoy the best IPTV service for high-quality streaming for an unmatched viewing experience
      </p>
      {/* Animation Class 3 */}
      <a
        href={buyNowLink}
        class="inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-8 rounded transition duration-300 ease-in-out animate-hero-fade-in-up animate-hero-delay-3"
      >
        Buy now!
      </a>
    </div>
  </div>

  {/* Animation Class 4 (simple fade) */}
  <div class="w-full overflow-hidden py-4 md:py-6 bg-gradient-to-t from-black/80 via-black/60 to-transparent mt-8 animate-hero-fade-in animate-hero-delay-4">
    <div class="animate-scrollLeft flex w-max">
      {imagesForLoop.map((imageName) => (
        <div class="flex-shrink-0 w-36 md:w-48 mx-2">
          <img
            src={`/home/${imageName}`}
            alt="Movie or Show Poster"
            class="w-full h-auto object-cover rounded-md shadow-lg"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Keyframes for Hero animations */
  @keyframes heroFadeInUp {
    from { opacity: 0; transform: translateY(25px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes heroFadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Keyframes for image scroller */
  @keyframes scrollLeft {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* Apply scrolling animation */
  .animate-scrollLeft {
    animation: scrollLeft 60s linear infinite;
  }

  /* Apply entrance animations */
  .animate-hero-fade-in-up,
  .animate-hero-fade-in {
    opacity: 0; /* Start hidden */
    animation-fill-mode: forwards; /* Keep final state */
  }

  .animate-hero-fade-in-up {
    animation-name: heroFadeInUp;
    animation-duration: 0.7s;
    animation-timing-function: ease-out;
  }

   .animate-hero-fade-in {
    animation-name: heroFadeIn;
    animation-duration: 0.9s;
    animation-timing-function: ease-out;
  }

  /* Stagger delays */
  .animate-hero-delay-1 { animation-delay: 0.2s; }
  .animate-hero-delay-2 { animation-delay: 0.4s; }
  .animate-hero-delay-3 { animation-delay: 0.6s; }
  .animate-hero-delay-4 { animation-delay: 0.8s; } /* Delay for the scroller */

</style>