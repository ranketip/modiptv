---
const offers = [
  {
    title: "TV Shows",
    description: "We have the best TV shows for you, which are updated regularly.",
    image: "/offers/tvshows-placeholder.jpg",
    link: "#pricing"
  },
  {
    title: "Sports",
    description: "All sports channels including all sports around the world.",
    image: "/offers/sports-placeholder.jpg",
    link: "#pricing"
  },
  {
    title: "Movies",
    description: "Huge number of movies and series in all languages of the world are waiting for you.",
    image: "/offers/movies-placeholder.jpg",
    link: "#pricing"
  },
  {
    title: "Documentaries",
    description: "Watch the latest documentaries and cultural programs for all countries of the world.",
    image: "/offers/docs-placeholder.jpg",
    link: "#pricing"
  },
];
---

<section class="bg-black text-white py-16 md:py-24 px-4">
  <div class="container mx-auto max-w-6xl">

    <div class="text-center mb-12 md:mb-16">
      <h3 class="text-red-500 uppercase tracking-wider font-semibold text-sm mb-2">
        What We Offer
      </h3>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold">
        Subscribe to Our Service
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {offers.map((offer) => (
        <div class="relative rounded-xl overflow-hidden shadow-lg group transition-all duration-300 ease-in-out hover:shadow-xl hover:shadow-red-900/30">
          <img
            src={offer.image}
            alt={offer.title}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-110"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/70 to-transparent"></div>

          <div class="relative z-10 p-6 md:p-8 flex flex-col justify-end min-h-[250px] md:min-h-[300px]">
            <h4 class="text-2xl md:text-3xl font-bold text-white mb-3">
              {offer.title}
            </h4>
            <p class="text-gray-200 mb-5 text-sm md:text-base leading-relaxed">
              {offer.description}
            </p>
            <div class="mt-auto">
              <a
                href={offer.link}
                class="inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded transition duration-300 ease-in-out text-sm"
              >
                Show Pricing
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>